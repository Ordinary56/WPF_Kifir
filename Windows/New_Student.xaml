<Window x:Class="WPF_Kifir.Windows.New_Student"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Kifir.Windows"
        mc:Ignorable="d"
        Title="New_Student" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBox  x:Name="txt_OMid"  HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <TextBox  x:Name="txt_Name"  Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <TextBox  x:Name="txt_Address"  Grid.Column="2"  HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <DatePicker    x:Name="date_Day_of_birth"  Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"  IsTodayHighlighted="False" Text="2000-01-01"/>
        <TextBox  x:Name="txt_Email"  Grid.Column="4"  HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        <TextBox  x:Name="txt_Maths"  Grid.Column="5"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20"/>
        <TextBox   x:Name="txt_Hungarian"  Grid.Column="6"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="20"/>
        <Button  Width="150" x:Name="btn_Add" Grid.Column="5" Grid.Row="1" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btn_Add_Click"  />
        <Button  Width="150"  x:Name="btn_Cancel" Grid.Column="6" Grid.Row="1" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btn_Cancel_Click"  />

        <Label Content="OM id"  HorizontalAlignment="Center"/>
        <Label Grid.Column="1" Content="Name" HorizontalAlignment="Center"/>
        <Label Grid.Column="2" Content="Address" HorizontalAlignment="Center"/>
        <Label Grid.Column="3" Content="Day of birth" HorizontalAlignment="Center"/>
        <Label Grid.Column="4" Content="Email" HorizontalAlignment="Center"/>
        <Label Grid.Column="5" Content="Math Points earned" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Grid.Column="6" Content="Hungarian Points earned" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
